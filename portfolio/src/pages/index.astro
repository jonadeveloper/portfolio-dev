---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../icons/Github.astro";
import LinkedinIcon from "../icons/Linkedin.astro";
import EmailIcon from "../icons/Email.astro";
import "../styles/global.css";
import Experience from "../components/Experience.astro";
import Briefcase from "../icons/Briefcase.astro";
---

<Layout
  title="portfolio de jonadev - Desarrollador y Programador Web Freelance con +2 años de experiencia"
  description="Bienvenidos a mi portfolio. Soy Jonadev y estoy abierto a nuevas propuestas. Contactame y hablemos de tu proyecto."
>
  <main>
    <SectionContainer class="py-44 pb-24">
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hola, soy Jonadev
        <a
          href="https://www.linkedin.com/in/jonatan-villalva-fullstack-developer/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible</Badge>
        </a>
      </h1>
      <h2 class="text-xl opacity-85 text-wrap">
        +2 años de experiencia como <span class="text-cyan-500 font-bold"
          >Desarrollador web freelance y creador de contenido.</span
        > De Buenos Aires, Argentina. Enfrento cada proyecto o desafío con la convicción
        de que todo puede mejorar.
      </h2>
      <nav class="flex gap-x-4 mt-8">
        <SocialPill
          href="https://www.linkedin.com/in/jonatan-villalva-fullstack-developer"
        >
          <LinkedinIcon class="size-6" />
          Linkedin
        </SocialPill>
        <SocialPill href="https://github.com/jonadeveloper/">
          <GithubIcon class="size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:jvillalva.sistemas@gmail.com">
          <EmailIcon class="size-6" />
          Email
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experience">
      <h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
